{
  "name": "twbst",
  "version": "1.0.0",
  "type": "module",
  "description": "A WordPress block starter theme with tailwind css for WordPress theme developers.",
  "author": "kantbtrue, savydv",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "Full Site Editing",
    "Block Theme",
    "Tailwind CSS",
    "WordPress",
    "Theme"
  ],
  "homepage": "https://example.com/twbst",
  "repository": {
    "type": "git",
    "url": "https://github.com/kanbtrue/twbst.git"
  },
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8 <7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@wordpress/babel-preset-default": "^7.29.0",
    "@wordpress/scripts": "^19.2.4",
    "autoprefix": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.4"
  },
  "scripts": {
    "wpbuild": "wp-scripts build",
    "build": "npm-run-all --parallel wpbuild tailwindbuild",
    "wpstart": "wp-scripts start",
    "start": "npm-run-all --parallel wpstart tailwindwatch",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "tailwindbuild": "tailwindcss -i ./src/css/style.css -o ./build/css/style.css --postcss --minify",
    "tailwindwatch": "tailwindcss -i ./src/css/style.css -o ./build/css/style.css --watch --postcss --minify"
  }
}
